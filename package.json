{
  "name": "osmj",
  "version": "2.5.0",
  "description": "OsMj - Windows 11 Style OS Simulator built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "node build-all.js",
    "build:cross": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "os",
    "simulator",
    "desktop",
    "osmj",
    "windows11",
    "glassmorphism"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "bootstrap": "^5.3.2"
  },
  "build": {
    "appId": "com.example.osmj",
    "productName": "OsMj - Windows 11 Style OS Simulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!*.md",
      "!build-*.js",
      "!build-*.bat",
      "!build-*.ps1",
      "!build-*.sh"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/os1 (1).png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/os1 (2).png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/os1 (1).png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
